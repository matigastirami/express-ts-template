{
  "name": "express-ts-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test:e2e": "set NODE_ENV=test&& jest --detectOpenHandles",
    "build": "npx tsc",
    "start": "node dist/index.js",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/index.js\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "typeorm": "npx ts-node ./node_modules/typeorm/cli",
    "typeorm:run-migrations": "npm run typeorm migration:run -- -d ./src/config/orm.config.ts",
    "typeorm:generate-migration": "npm run typeorm -- -d ./src/config/orm.config.ts migration:generate ./migrations/%npm_config_name%",
    "typeorm:create-migration": "npm run typeorm -- migration:create ./migrations/%npm_config_name%",
    "typeorm:revert-migration": "npm run typeorm -- -d ./src/config/orm.config.ts migration:revert"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.27.2",
    "class-validator": "^0.13.2",
    "dotenv": "^16.0.1",
    "envalid": "^7.3.1",
    "express": "^4.18.1",
    "lodash": "^4.17.21",
    "pg": "^8.7.3",
    "redis": "^4.2.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.7",
    "winston": "^3.8.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.7",
    "@types/lodash": "^4.14.184",
    "@types/node": "^18.7.6",
    "@types/redis": "^4.0.11",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "concurrently": "^7.3.0",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^28.1.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "redis-mock": "^0.56.3",
    "sqlite3": "^5.0.11",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
